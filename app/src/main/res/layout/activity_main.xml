<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
               >

    <Button
        android:id="@+id/btn_start"
        android:text="启动"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
    <ImageView
        android:id="@+id/image_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_above="@+id/img_sum"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_sum"
        android:src="@drawable/dot_0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_earth"
        android:src="@drawable/dot_1"
        android:layout_alignTop="@+id/img_sum"
        android:layout_toRightOf="@+id/btn_start"
        android:layout_toEndOf="@+id/btn_start"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_mon"
        android:src="@drawable/dot_1"
        android:layout_alignTop="@+id/img_earth"
        android:layout_toLeftOf="@+id/img_earth"
        android:layout_toStartOf="@+id/img_earth"/>

</RelativeLayout>
